<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_summoner_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/game_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/game_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        android:id="@+id/game_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/game_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/game_champion_icon"

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="#E0E0E0"
                            android:layout_marginRight="2dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/game_spell1"
                                android:layout_width="24dp"
                                android:background="#E0E0E0"
                                android:layout_height="24dp"
                                android:layout_marginBottom="2dp"/>

                            <ImageView
                                android:id="@+id/game_spell2"
                                android:layout_width="24dp"
                                android:background="#E0E0E0"
                                android:layout_height="24dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/game_champion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/game_stats"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        android:id="@+id/game_kda"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/game_max_kill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/game_level"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        android:id="@+id/game_cs"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:tint="@color/colorAccent"
                        android:layout_width="48dp"
                        android:id="@+id/button_expand_part2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:src="@drawable/ic_expand_more"/>

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:id="@+id/delimiter_match_card"
                android:background="#E0E0E0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/match_card_part_2"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/game_item0"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#E0E0E0" />

                        <ImageView
                            android:id="@+id/game_item1"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#E0E0E0" />

                        <ImageView
                            android:id="@+id/game_item2"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E0E0E0" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/game_item3"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#E0E0E0" />

                        <ImageView
                            android:id="@+id/game_item4"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#E0E0E0" />

                        <ImageView
                            android:id="@+id/game_item5"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:background="#E0E0E0" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/game_item6"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/game_team1_1"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"/>

                        <ImageView
                            android:id="@+id/game_team1_2"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"/>

                        <ImageView
                            android:id="@+id/game_team1_3"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"/>

                        <ImageView
                            android:id="@+id/game_team1_4"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"/>

                        <ImageView
                            android:id="@+id/game_team1_5"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/team1"
                            android:layout_marginLeft="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/game_team2_1"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"/>

                        <ImageView
                            android:id="@+id/game_team2_2"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"/>

                        <ImageView
                            android:id="@+id/game_team2_3"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"/>

                        <ImageView
                            android:id="@+id/game_team2_4"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"/>

                        <ImageView
                            android:id="@+id/game_team2_5"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="2dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/team2"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4dp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>